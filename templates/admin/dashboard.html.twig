{% extends 'base.html.twig' %}

{% block title %}–ü–∞–Ω–µ–ª—å —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è{% endblock %}

{% block styles %}
    .header {
        background: white;
        border-radius: 16px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    .header-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }
    .header h1 {
        color: #333;
        font-size: 32px;
    }
    .logout-btn {
        padding: 10px 20px;
        background: #f5f5f5;
        color: #666;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: background 0.3s;
    }
    .logout-btn:hover {
        background: #e0e0e0;
    }
    .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }
    .stat-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 24px;
        border-radius: 12px;
        text-align: center;
    }
    .stat-card h3 {
        font-size: 14px;
        opacity: 0.9;
        margin-bottom: 8px;
        font-weight: 500;
    }
    .stat-card .number {
        font-size: 36px;
        font-weight: bold;
    }
    .content {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    .content h2 {
        color: #333;
        margin-bottom: 24px;
        font-size: 24px;
    }
    .alert {
        padding: 12px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }
    .alert-success {
        background: #d4edda;
        color: #155724;
    }
    .alert-error {
        background: #f8d7da;
        color: #721c24;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    thead {
        background: #f8f9fa;
    }
    th {
        padding: 16px;
        text-align: left;
        font-weight: 600;
        color: #666;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    td {
        padding: 16px;
        border-top: 1px solid #e0e0e0;
        color: #333;
    }
    tr:hover {
        background: #f8f9fa;
    }
    .badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }
    .badge-active {
        background: #d4edda;
        color: #155724;
    }
    .badge-inactive {
        background: #f8d7da;
        color: #721c24;
    }
    .btn-small {
        padding: 8px 16px;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
        margin-right: 8px;
    }
    .btn-toggle {
        background: #667eea;
        color: white;
    }
    .btn-toggle:hover {
        background: #5568d3;
    }
    .btn-delete {
        background: #dc3545;
        color: white;
    }
    .btn-delete:hover {
        background: #c82333;
    }
    .btn-history {
        background: #17a2b8;
        color: white;
        text-decoration: none;
        display: inline-block;
    }
    .btn-history:hover {
        background: #138496;
    }
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #999;
    }
    .empty-state .emoji {
        font-size: 64px;
        margin-bottom: 20px;
    }
    .empty-state p {
        font-size: 18px;
    }
    .username {
        color: #667eea;
        font-weight: 500;
    }
    .date {
        color: #999;
        font-size: 14px;
    }
    .time-form {
        padding: 8px 0;
    }
    .time-inputs {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 8px;
    }
    .time-inputs label {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }
    .time-inputs label span {
        min-width: 80px;
        font-weight: 500;
    }
    .time-inputs input[type="time"] {
        padding: 6px 10px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 14px;
        font-family: inherit;
    }
    .time-inputs input[type="time"]:focus {
        outline: none;
        border-color: #667eea;
    }
    .btn-save {
        background: #28a745;
        color: white;
        font-size: 13px;
    }
    .btn-save:hover {
        background: #218838;
    }
{% endblock %}

